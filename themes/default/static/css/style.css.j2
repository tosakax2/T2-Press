/* --- サイト全体 --- */
html {
    font-size: 16px;
}
body {
    font-family: {{ theme.fonts.base }};
    background-color: {{ theme.colors.master_background }};
    color: {{ theme.colors.master_text }};
    font-size: 1rem;
    line-height: 1.6;
}

/* --- サイト全体のナビゲーション --- */
.site-nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    display: flex;
    justify-content: center;
    align-items: center;

    width: 100%;
    height: 64px;
    border-bottom: solid 4px {{ theme.colors.master_accent }};
    background: repeating-linear-gradient(
        135deg,
        {{ theme.colors.stripe_background1 }},
        {{ theme.colors.stripe_background1 }} 2px,
        {{ theme.colors.stripe_background2 }} 2px,
        {{ theme.colors.stripe_background2 }} 4px
    );
}
.site-nav-link {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    padding: 0 1.5rem;
    box-sizing: border-box;

    font-size: 1rem;
    font-weight: bold;
    color: {{ theme.colors.stripe_text }};
    text-decoration: none;
}
.site-nav-link:hover {
    background-color: {{ theme.colors.master_accent }};
    color: {{ theme.colors.stripe_background1 }};
}
.site-nav-link > .material-icons-outlined {
    font-size: 1.35rem;
    margin-right: 0.5rem;
}

/* --- サイト全体のヘッダー --- */
.site-header {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 400px;
    padding: 1rem 0;

    color: {{ theme.colors.master_text }};
}
.site-header-title {
    font-size: 2.5rem;
    font-weight: bold;
    line-height: 1.3;
}

/* --- サイト全体のフッター --- */
.site-footer {
    font-size: 0.9rem;
}
.site-footer-copyright {
    font-size: 0.8rem;
}

/* --- 見出し --- */
h1 {
    font-size: 2.25rem;
    font-weight: bold;
    line-height: 1.3;
    text-align: center;
}
h2 {
    margin: 2rem 0 1rem;
    padding: 0.5em;
    border-left: solid 8px {{ theme.colors.master_accent }};
    border-radius: 8px 2px 2px 8px;

    font-size: 1.75rem;
    font-weight: bold;
    line-height: 1.35;
}
h3 {
    font-size: 1.25rem;
    font-weight: bold;
    line-height: 1.4;
    margin: 1.5rem 0 0.75rem 1rem;
}

/* --- 本文 ---*/
p {
    font-size: 1rem;
    line-height: 1.6;
    margin: 0 1.5rem;
}

/* --- リンク --- */
a {
    color: {{ theme.colors.link_text }};
    text-decoration: none;
}

/* --- リスト --- */
ul {
    list-style: disc;
    font-size: 1rem;
    padding-left: 1.5rem;
}
ol {
    list-style: decimal;
    font-size: 1rem;
    padding-left: 1.5rem;
}
ol ::marker {
    font-weight: bold;
}

/* --- 区切り線 --- */
hr {
    border: none;
    border-top: 1px solid {{ theme.colors.divider }};
    margin: 2rem 0;
    width: 100%;
}

/* --- コードインライン --- */
code {
    font-family: {{ theme.fonts.code }};
    background-color: {{ theme.colors.code_background }};
    color: {{ theme.colors.code_text }};
    font-size: 0.85rem;
    line-height: 1.4;
    border-radius: 4px;
    padding: 0.2rem;
}

/* --- コードブロック --- */
.code-block {
    background-color: {{ theme.colors.code_block_background }};
    border-radius: 5px;
}
pre {
    font-family: {{ theme.fonts.code }};
    color: {{ theme.colors.code_block_text }};
    font-size: 0.9rem;
    line-height: 1.5;
    overflow-x: auto;
    padding: 0.85rem 0.9rem;
}

/* --- テーブル --- */
table {
    border: solid 2px {{ theme.colors.table_border }};
    margin: 1.5rem;
}
th {
    background-color: {{ theme.colors.table_header_background }};
    font-size: 0.9rem;
    font-weight: bold;
    border: solid 1px {{ theme.colors.table_border }};
    padding: 0.25rem 0.5rem;
    min-width: 5rem;
}
td {
    background-color: {{ theme.colors.table_background }};
    font-size: 0.9rem;
    border: solid 1px {{ theme.colors.table_border }};
    padding: 0.25rem 0.5rem;
    min-width: 5rem;
}

/* --- 画像 ---*/
img {
    border-radius: 8px;
    margin: 0 auto;
    display: block;
}

/* --- 動画 ---*/
iframe {
    border-radius: 8px;
    margin: 0 auto;
    display: block;
}