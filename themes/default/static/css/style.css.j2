/* サイト全体 */
html {
    font-size: 16px;
}

body {
    font-family: {{ theme.fonts.base }};
    background-color: {{ theme.colors.background }};
    color: {{ theme.colors.text }};
    font-size: 1rem;
    line-height: 1.6;
}

header {
    font-size: 2.25rem;
    position: sticky;
    top: 0;
    z-index: 1000;
    background-color: white;  /* 必須！透け防止 */
}

footer {
    font-size: 2.25rem;
}

footer > .copyright {
    font-size: 0.6rem;
}

/* 全体的な囲い */
.parent-card {
    background-color: {{ theme.colors.parent_card_background }};
    border-radius: 8px;
    padding: 16px;
    margin: 8px;
}

/* 記事タイトル */
h1 {
    font-size: 2.25rem;
    font-weight: bold;
    line-height: 1.3;
}

h2 {
    font-size: 1.75rem;
    font-weight: bold;
    line-height: 1.35;

    padding: 0.5em;
    background-color: #fffaf4;
    border-left: solid 5px #ffaf58;
}

h3 {
    font-size: 1.25rem;
    font-weight: bold;
    line-height: 1.4;
}

/* コードインライン */
code {
    font-family: {{ theme.fonts.code }};
    background-color: {{ theme.colors.code_inline_background }};
    color: {{ theme.colors.code_inline_text }};
    font-size: 0.85rem;
    line-height: 1.4;
    border-radius: 4px;
    padding: 4px;
}

/* コードブロック */
.code-block {
    background-color: {{ theme.colors.code_block_background }};
    border-radius: 5px;
}

pre {
    font-family: {{ theme.fonts.code }};
    color: {{ theme.colors.code_block_text }};
    font-size: 0.8rem;
    line-height: 1.5;
    overflow-x: auto;
    padding: 0.85rem 0.9rem;
}