/* --- CSSリセット --- */
*,
*::before,
*::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}
html, body {
    height: 100%;
    font-family: sans-serif;
}

/* --- サイト全体 --- */
html {
    font-size: 16px;
}
body {
    font-family: {{ theme.fonts.base }};
    background-color: {{ theme.colors.master_background }};
    color: {{ theme.colors.master_text }};
    font-size: 1rem;
    line-height: 1.6;
}

/* --- サイト全体の幅制限 --- */
.width-constraint {
    max-width: 960px;
    margin: 0 auto;
}

/* --- サイト全体のヘッダー --- */
.site-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    width: 100%;
    z-index: 1000;
    background-image: repeating-linear-gradient(
        45deg,
        {{ theme.colors.header_background1 }},
        {{ theme.colors.header_background2 }} 1px,
        {{ theme.colors.header_background1 }},
        {{ theme.colors.header_background2 }} 1px
    );

    border-bottom: solid 8px {{ theme.colors.master_accent }};
}
.site-header-title {
    font-size: 2.25rem;
    font-weight: bold;
    color: {{ theme.colors.site_header_title_text }};
}
.site-header-nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem 4rem;
}
.site-header-nav-link {
    font-size: 1rem;
    color: {{ theme.colors.site_header_nav_link_text }};
    text-decoration: none;
}
.site-header-spacer {
    height: 120px;
}

/* --- サイト全体のメインコンテンツ --- */
.site-main {
    margin: 16px;
}

/* --- サイト全体のフッター --- */
.site-footer {
    font-size: 0.9rem;
}
.site-footer-copyright {
    font-size: 0.8rem;
}

/* --- 見出し --- */
h1 {
    font-size: 2.25rem;
    font-weight: bold;
    line-height: 1.3;
    margin: 2rem 0 1rem;
}
h2 {
    font-size: 1.75rem;
    font-weight: bold;
    line-height: 1.35;
    margin: 2rem 0 1rem;

    padding: 0.5em;
    background-color: #fffaf4;
    border-left: solid 8px {{ theme.colors.master_accent }};
    border-radius: 8px 2px 2px 8px;
}
h3 {
    font-size: 1.25rem;
    font-weight: bold;
    line-height: 1.4;
    margin: 1.5rem 0 0.75rem;
}

/* --- 本文 ---*/
p {
    font-size: 1rem;
    line-height: 1.6;
    maring: 0 0 1.25rem;
}

/* --- リスト --- */
ul, ol {
    padding-left: 1.5rem;
}

/* --- 区切り線 --- */
hr {
    border: none;
    border-top: 1px solid {{ theme.colors.divider }};
    margin: 2rem 0;
    width: 100%;
}

/* --- コードインライン --- */
code {
    font-family: {{ theme.fonts.code }};
    background-color: {{ theme.colors.code_background }};
    color: {{ theme.colors.code_text }};
    font-size: 0.85rem;
    line-height: 1.4;
    border-radius: 4px;
    padding: 0.2rem;
}

/* --- コードブロック --- */
.code-block {
    background-color: {{ theme.colors.code_block_background }};
    border-radius: 5px;
}
pre {
    font-family: {{ theme.fonts.code }};
    color: {{ theme.colors.code_block_text }};
    font-size: 0.9rem;
    line-height: 1.5;
    overflow-x: auto;
    padding: 0.85rem 0.9rem;
}